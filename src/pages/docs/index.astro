---
import DocsLayout from '../../layouts/DocsLayout.astro';

const sidebar = [
	{
		title: 'Docs',
		links: [
			{ href: '/docs', label: 'Intro', active: true }
		]
	},
	{
		title: 'PrismChart',
		collapsible: true,
		expanded: true,
		links: [
			{ href: '/docs/prismchart', label: 'Overview' },
			{ href: '/docs/prismchart/installation', label: 'Installation' },
			{ href: '/docs/prismchart/foundation', label: 'Foundation' },
			{ href: '/docs/prismchart/chart-tools', label: 'Chart Tools' },
			{ href: '/docs/prismchart/development', label: 'Development' },
			{ href: '/docs/prismchart/credits', label: 'Credits' }
		]
	}
];
---

<DocsLayout title="Docs - Strannik" sidebar={sidebar}>
	<style>
		h1 {
			font-size: 1.8rem;
			font-weight: 600;
			margin-bottom: 0.5rem;
		}

		p {
			color: #666;
			margin-bottom: 1rem;
		}
	</style>

	<h1>Intro</h1>
	<p>Guides and reference for Strannik apps.</p>
	<p>Select a topic from the sidebar to get started.</p>
</DocsLayout>
