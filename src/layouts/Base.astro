---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
				font-size: 16px;
				line-height: 1.6;
				color: #1a1a1a;
				background: #fff;
			}

			body {
				min-height: 100vh;
			}

			a {
				color: inherit;
				text-decoration: underline;
				text-underline-offset: 2px;
			}

			a:hover {
				color: #666;
			}

			.container {
				max-width: 1078px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Header */
			header {
				border-bottom: 1px solid #e5e5e5;
				padding: 1rem 0;
			}

			header .container {
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.logo {
				font-weight: 600;
				font-size: 1.1rem;
				text-decoration: none;
			}

			nav {
				display: flex;
				gap: 2rem;
				align-items: center;
			}

			nav a {
				text-decoration: none;
				color: #666;
				font-size: 0.95rem;
			}

			nav a:hover {
				color: #000;
			}

			/* Main */
			main {
				padding: 4rem 0;
			}

			/* Footer */
			footer {
				border-top: 1px solid #e5e5e5;
				padding: 2rem 0;
				margin-top: 4rem;
			}

			footer .container {
				display: flex;
				justify-content: space-between;
				align-items: center;
				color: #666;
				font-size: 0.9rem;
			}

			footer nav {
				gap: 1.5rem;
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container">
				<a href="/" class="logo">Strannik</a>
				<nav>
					<a href="/prismchart">PrismChart</a>
					<a href="https://github.com/ether-strannik" target="_blank">GitHub</a>
				</nav>
			</div>
		</header>

		<main>
			<div class="container">
				<slot />
			</div>
		</main>

		<footer>
			<div class="container">
				<span>&copy; 2026</span>
				<nav>
					<a href="https://github.com/ether-strannik" target="_blank">GitHub</a>
				</nav>
			</div>
		</footer>
	</body>
</html>
