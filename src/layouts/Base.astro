---
interface Props {
	title: string;
}

const { title } = Astro.props;

const buildDate = new Date().toLocaleDateString('en-US', {
	month: 'short',
	day: 'numeric',
	year: 'numeric'
});
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fontsource/iosevka@5.0.4/index.css" />
		<title>{title}</title>
		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: 'Iosevka', monospace;
				font-size: 16px;
				line-height: 1.6;
				color: #1a1a1a;
				background: #fff;
			}

			body {
				min-height: 100vh;
				background: #f9f9f9;
			}

			a {
				color: inherit;
				text-decoration: underline;
				text-underline-offset: 2px;
			}

			a:hover {
				color: #666;
			}

			.frame {
				max-width: 1078px;
				margin: 0 auto;
				border-left: 1px solid #e5e5e5;
				border-right: 1px solid #e5e5e5;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				background: #fff;
			}

			.container {
				padding: 0 2rem;
			}

			/* Header */
			header {
				border-bottom: 1px solid #e5e5e5;
				padding: 1rem 0;
			}

			header .container {
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.logo {
				font-family: 'Iosevka', monospace;
				font-weight: 400;
				font-size: 1.75rem;
				text-decoration: none;
			}

			nav {
				display: flex;
				gap: 2rem;
				align-items: center;
			}

			nav a {
				text-decoration: none;
				color: #666;
				font-size: 0.95rem;
			}

			nav a:hover {
				color: #000;
			}

			/* Main */
			main {
				padding: 4rem 0;
				flex: 1;
			}

			/* Footer */
			footer {
				border-top: 1px solid #e5e5e5;
				padding: 2rem 0;
			}

			footer .container {
				display: flex;
				justify-content: space-between;
				align-items: center;
				color: #666;
				font-size: 0.9rem;
			}

			footer nav {
				gap: 1.5rem;
			}

			footer .updated {
				color: #999;
			}

			code {
				font-family: 'Iosevka', monospace;
				font-size: 0.9em;
				background: #f5f5f5;
				padding: 0.2em 0.4em;
				border-radius: 3px;
			}

			pre {
				font-family: 'Iosevka', monospace;
				background: #1a1a1a;
				color: #e5e5e5;
				padding: 1rem;
				border-radius: 6px;
				overflow-x: auto;
			}

			pre code {
				background: none;
				padding: 0;
			}
		</style>
	</head>
	<body>
		<div class="frame">
			<header>
				<div class="container">
					<a href="/" class="logo">Strannik</a>
					<nav>
						<a href="https://github.com/ether-strannik" target="_blank">GitHub</a>
						<a href="/docs">Docs</a>
						<a href="/credits">Credits</a>
					</nav>
				</div>
			</header>

			<main>
				<div class="container">
					<slot />
				</div>
			</main>

			<footer>
				<div class="container">
					<span>Strannik</span>
					<span class="updated">Updated {buildDate}</span>
				</div>
			</footer>
		</div>
	</body>
</html>
