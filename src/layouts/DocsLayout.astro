---
import { ViewTransitions } from 'astro:transitions';

interface SidebarLink {
	href?: string;
	label: string;
	active?: boolean;
	children?: { href: string; label: string; active?: boolean }[];
}

interface Props {
	title: string;
	sidebar?: { title: string; collapsible?: boolean; expanded?: boolean; links: SidebarLink[] }[];
	toc?: { href: string; label: string; indent?: boolean }[];
	issuesUrl?: string;
}

const { title, sidebar = [], toc = [], issuesUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
		<title>{title}</title>
		<ViewTransitions />
		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
				font-size: 16px;
				line-height: 1.6;
				color: #1a1a1a;
				background: #fff;
			}

			body {
				min-height: 100vh;
			}

			a {
				color: inherit;
				text-decoration: underline;
				text-underline-offset: 2px;
			}

			a:hover {
				color: #666;
			}

			code {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.9em;
				background: #f5f5f5;
				padding: 0.2em 0.4em;
				border-radius: 3px;
			}

			/* Header */
			.docs-header {
				border-bottom: 1px solid #e5e5e5;
				padding: 1rem 2rem;
				display: flex;
				justify-content: space-between;
				align-items: center;
				position: sticky;
				top: 0;
				background: #fff;
				z-index: 100;
			}

			.logo {
				font-family: 'IBM Plex Mono', monospace;
				font-weight: 400;
				font-size: 1.75rem;
				text-decoration: none;
			}

			.header-nav {
				display: flex;
				gap: 2rem;
				align-items: center;
			}

			.header-nav a {
				text-decoration: none;
				color: #666;
				font-size: 0.95rem;
			}

			.header-nav a:hover {
				color: #000;
			}

			/* Search */
			.search-btn {
				display: flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.4rem 0.75rem;
				border: 1px solid #e5e5e5;
				border-radius: 4px;
				background: #fff;
				color: #999;
				font-size: 0.9rem;
				cursor: pointer;
				font-family: inherit;
			}

			.search-btn:hover {
				border-color: #ccc;
			}

			.search-btn kbd {
				font-family: inherit;
				font-size: 0.8rem;
				color: #999;
			}

			/* Search Modal */
			.search-modal {
				display: none;
				position: fixed;
				inset: 0;
				background: rgba(0,0,0,0.5);
				z-index: 200;
				justify-content: center;
				padding-top: 10vh;
			}

			.search-modal.open {
				display: flex;
			}

			.search-container {
				background: #fff;
				border-radius: 8px;
				width: 100%;
				max-width: 600px;
				max-height: 70vh;
				overflow: hidden;
				display: flex;
				flex-direction: column;
				box-shadow: 0 10px 40px rgba(0,0,0,0.2);
			}

			.search-input-wrap {
				padding: 1rem;
				border-bottom: 1px solid #e5e5e5;
			}

			.search-input {
				width: 100%;
				padding: 0.75rem;
				border: 1px solid #e5e5e5;
				border-radius: 4px;
				font-size: 1rem;
				font-family: inherit;
				outline: none;
			}

			.search-input:focus {
				border-color: #000;
			}

			.search-results {
				flex: 1;
				overflow-y: auto;
				padding: 0.5rem;
			}

			.search-result {
				display: block;
				padding: 0.75rem 1rem;
				text-decoration: none;
				color: #333;
				border-radius: 4px;
			}

			.search-result:hover {
				background: #f5f5f5;
				color: #000;
			}

			.search-result-title {
				font-weight: 500;
				margin-bottom: 0.25rem;
			}

			.search-result-excerpt {
				font-size: 0.85rem;
				color: #666;
			}

			.search-empty {
				padding: 2rem;
				text-align: center;
				color: #999;
			}

			/* Issue link */
			.issue-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				margin-top: 3rem;
				padding-top: 1.5rem;
				border-top: 1px solid #e5e5e5;
				color: #666;
				font-size: 0.9rem;
				text-decoration: none;
			}

			.issue-link:hover {
				color: #000;
			}

			.issue-link svg {
				width: 16px;
				height: 16px;
			}

			/* Layout */
			.docs-layout {
				display: grid;
				grid-template-columns: 240px 1fr 200px;
				min-height: calc(100vh - 60px);
			}

			/* Sidebar */
			.sidebar {
				border-right: 1px solid #e5e5e5;
				padding: 2rem 1.5rem;
				position: sticky;
				top: 60px;
				height: calc(100vh - 60px);
				overflow-y: auto;
			}

			.sidebar-section {
				margin-bottom: 0.25rem;
			}

			.sidebar-title {
				font-size: 0.95rem;
				font-weight: 600;
				color: #000;
				margin-bottom: 0.5rem;
			}

			.sidebar-nav {
				list-style: none;
			}

			.sidebar-nav li {
				padding: 0.3rem 0;
			}

			.sidebar-nav a {
				text-decoration: none;
				font-size: 0.95rem;
			}

			.sidebar-nav a {
				color: #666;
			}

			.sidebar-nav a:hover {
				color: #000;
			}

			.sidebar-nav a.active {
				color: #000;
				font-weight: 500;
			}

			.sidebar-nav .subsection {
				margin: 0.25rem 0;
			}

			.sidebar-nav .subsection-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				cursor: pointer;
				user-select: none;
				padding: 0.3rem 0;
			}

			.sidebar-nav .subsection-label {
				color: #666;
				font-size: 0.95rem;
			}

			.sidebar-nav .subsection-header:hover .subsection-label {
				color: #000;
			}

			.sidebar-nav .subsection-toggle {
				color: #999;
				font-size: 0.7rem;
				transition: transform 0.2s;
			}

			.sidebar-nav .subsection.collapsed .subsection-toggle {
				transform: rotate(-90deg);
			}

			.sidebar-nav .subsection.collapsed .subsection-children {
				display: none;
			}

			.sidebar-nav .subsection-children {
				list-style: none;
				padding-left: 0.75rem;
			}

			.sidebar-nav .subsection-children li {
				padding: 0.25rem 0;
			}

			/* Collapsible sections */
			.sidebar-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				cursor: pointer;
				user-select: none;
				padding: 0.25rem 0;
			}

			.sidebar-header:hover .sidebar-title {
				color: #666;
			}

			.sidebar-toggle {
				color: #999;
				font-size: 0.8rem;
				transition: transform 0.2s;
			}

			.sidebar-section:not(.collapsed) .sidebar-toggle {
				transform: rotate(90deg);
			}

			.sidebar-section.collapsed .sidebar-nav {
				display: none;
			}

			/* Content */
			.docs-content {
				padding: 2rem 3rem;
				max-width: 800px;
			}

			/* Table of Contents (right) */
			.toc {
				padding: 2rem 1.5rem;
				position: sticky;
				top: 60px;
				height: calc(100vh - 60px);
				overflow-y: auto;
			}

			.toc-title {
				font-size: 0.8rem;
				font-weight: 600;
				color: #999;
				margin-bottom: 0.75rem;
			}

			.toc-nav {
				list-style: none;
			}

			.toc-nav li {
				padding: 0.25rem 0;
			}

			.toc-nav li.indent {
				padding-left: 1rem;
			}

			.toc-nav a {
				color: #666;
				text-decoration: none;
				font-size: 0.9rem;
			}

			.toc-nav a:hover {
				color: #000;
			}

			@media (max-width: 1024px) {
				.docs-layout {
					grid-template-columns: 240px 1fr;
				}

				.toc {
					display: none;
				}
			}

			@media (max-width: 768px) {
				.docs-layout {
					grid-template-columns: 1fr;
				}

				.sidebar {
					position: relative;
					top: 0;
					height: auto;
					border-right: none;
					border-bottom: 1px solid #e5e5e5;
				}
			}
		</style>
	</head>
	<body>
		<header class="docs-header">
			<a href="/" class="logo">Strannik</a>
			<nav class="header-nav">
				<a href="https://github.com/ether-strannik" target="_blank">GitHub</a>
				<a href="/docs">Docs</a>
				<button class="search-btn" id="searchBtn">
					Search <kbd>Ctrl K</kbd>
				</button>
			</nav>
		</header>

		<div class="search-modal" id="searchModal">
			<div class="search-container">
				<div class="search-input-wrap">
					<input type="text" class="search-input" id="searchInput" placeholder="Search docs..." autocomplete="off" />
				</div>
				<div class="search-results" id="searchResults">
					<div class="search-empty">Type to search...</div>
				</div>
			</div>
		</div>

		<div class="docs-layout">
			<aside class="sidebar" transition:persist>
				{sidebar.map(section => (
					<div class={`sidebar-section ${section.collapsible ? 'collapsed' : ''}`} data-collapsible={section.collapsible ? 'true' : undefined}>
						{section.title && (
							section.collapsible ? (
								<div class="sidebar-header">
									<div class="sidebar-title">{section.title}</div>
									<span class="sidebar-toggle">&gt;</span>
								</div>
							) : (
								<div class="sidebar-title">{section.title}</div>
							)
						)}
						<ul class="sidebar-nav">
							{section.links.map(link => (
								<li><a href={link.href} class={link.active ? 'active' : ''}>{link.label}</a></li>
							))}
						</ul>
					</div>
				))}
			</aside>

			<main class="docs-content">
				<slot />

				{issuesUrl && (
					<a href={issuesUrl} class="issue-link" target="_blank">
						<svg viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/></svg>
						Spot something off? Open an issue
					</a>
				)}
			</main>

			{toc.length > 0 && (
				<aside class="toc">
					<div class="toc-title">ON THIS PAGE</div>
					<ul class="toc-nav">
						{toc.map(item => (
							<li class={item.indent ? 'indent' : ''}><a href={item.href}>{item.label}</a></li>
						))}
					</ul>
				</aside>
			)}
		</div>

		<script>
			// Collapsible sidebar
			document.querySelectorAll('.sidebar-section[data-collapsible]').forEach(section => {
				const header = section.querySelector('.sidebar-header');
				if (header) {
					header.addEventListener('click', () => {
						section.classList.toggle('collapsed');
					});
				}
			});

			// Collapsible subsections
			document.querySelectorAll('.subsection[data-subsection]').forEach(subsection => {
				const header = subsection.querySelector('.subsection-header');
				if (header) {
					header.addEventListener('click', () => {
						subsection.classList.toggle('collapsed');
					});
				}
			});

			// Search
			const searchBtn = document.getElementById('searchBtn');
			const searchModal = document.getElementById('searchModal');
			const searchInput = document.getElementById('searchInput');
			const searchResults = document.getElementById('searchResults');

			let pagefind = null;

			async function loadPagefind() {
				if (pagefind) return pagefind;

				try {
					// Load pagefind at runtime to avoid build-time resolution
					pagefind = await new Function('return import("/pagefind/pagefind.js")')();
					await pagefind.init();
					return pagefind;
				} catch (e) {
					// Pagefind not available in dev mode
					return null;
				}
			}

			function openSearch() {
				searchModal.classList.add('open');
				searchInput.focus();
				loadPagefind();
			}

			function closeSearch() {
				searchModal.classList.remove('open');
				searchInput.value = '';
				searchResults.innerHTML = '<div class="search-empty">Type to search...</div>';
			}

			searchBtn.addEventListener('click', openSearch);

			searchModal.addEventListener('click', (e) => {
				if (e.target === searchModal) closeSearch();
			});

			document.addEventListener('keydown', (e) => {
				if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
					e.preventDefault();
					openSearch();
				}
				if (e.key === 'Escape') closeSearch();
			});

			let searchTimeout;
			searchInput.addEventListener('input', async () => {
				clearTimeout(searchTimeout);
				const query = searchInput.value.trim();

				if (!query) {
					searchResults.innerHTML = '<div class="search-empty">Type to search...</div>';
					return;
				}

				searchTimeout = setTimeout(async () => {
					const pf = await loadPagefind();
					if (!pf) {
						searchResults.innerHTML = '<div class="search-empty">Search not available</div>';
						return;
					}

					const results = await pf.search(query);

					if (results.results.length === 0) {
						searchResults.innerHTML = '<div class="search-empty">No results found</div>';
						return;
					}

					const html = await Promise.all(
						results.results.slice(0, 10).map(async (r) => {
							const data = await r.data();
							return `
								<a href="${data.url}" class="search-result">
									<div class="search-result-title">${data.meta?.title || data.url}</div>
									<div class="search-result-excerpt">${data.excerpt}</div>
								</a>
							`;
						})
					);

					searchResults.innerHTML = html.join('');
				}, 200);
			});
		</script>
	</body>
</html>
